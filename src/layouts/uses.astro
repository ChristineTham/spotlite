---
import Layout from '../layouts/layout.astro'

interface Props {
  frontmatter: {
    title: string
    description: string
    list: {
      section: string
      items: {
        item: string
        description: string
      }[]
    }[]
  }
}

const { frontmatter } = Astro.props
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <div class="mt-16 sm:mt-32 sm:px-8">
    <div class="mx-auto max-w-7xl lg:px-8">
      <div class="relative px-4 sm:px-8 lg:px-12">
        <div class="mx-auto max-w-2xl lg:max-w-5xl">
          <header class="max-w-2xl">
            <h1
              class="text-4xl font-bold tracking-tight text-pink-800 dark:text-pink-100 sm:text-5xl"
            >
              {frontmatter.description}
            </h1><div class="mt-6 text-base text-zinc-600 dark:text-zinc-400">
              <slot />
            </div>
          </header><div class="mt-16 sm:mt-20">
            <div class="space-y-20">
              {
                frontmatter.list.map((section) => (
                  <section
                    aria-labelledby=":R6l6:"
                    class="md:border-l md:border-pink-100 md:pl-6 md:dark:border-pink-700/40"
                  >
                    <div class="grid max-w-3xl grid-cols-1 items-baseline gap-y-8 md:grid-cols-4">
                      <>
                        <h2
                          id=":R6l6:"
                          class="text-sm font-semibold text-zinc-800 dark:text-zinc-100"
                        >
                          {section.section}
                        </h2>
                        <div class="md:col-span-3">
                          <ul role="list" class="space-y-16">
                            {section.items.map((item) => (
                              <li class="group relative flex flex-col items-start">
                                <h3 class="text-base font-semibold tracking-tight text-zinc-800 dark:text-zinc-100">
                                  {item.item}
                                </h3>
                                <p class="relative z-10 mt-2 text-sm text-zinc-600 dark:text-zinc-400">
                                  {item.description}
                                </p>
                              </li>
                            ))}
                          </ul>
                        </div>
                      </>
                    </div>
                  </section>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
